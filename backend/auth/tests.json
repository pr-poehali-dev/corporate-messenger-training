      "path": "/",
      "body": {
        "action": "login",
        "email": "teacher@test.com",
        "password": "test123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Register duplicate email returns error",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "email": "teacher@test.com",
        "password": "test123",
        "full_name": "Test Teacher",
        "role": "admin"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "success": false,
        "error": "Email already registered"
      },
      "bodyMatcher": "partial"
    }
  ]
